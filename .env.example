# Database Configuration
# NOTA: Per Supabase, usa il Connection Pooling (porta 6543) invece della connessione diretta
# Connection String per pooler: jdbc:postgresql://db.PROJECT_ID.supabase.co:6543/postgres?sslmode=require&prepareThreshold=0
# Username per pooler: postgres.PROJECT_ID

# Connection Pooling (consigliato)
SPRING_DATASOURCE_URL=jdbc:postgresql://db.YOUR_PROJECT_ID.supabase.co:6543/postgres?sslmode=require&prepareThreshold=0
SPRING_DATASOURCE_USERNAME=postgres.YOUR_PROJECT_ID
SPRING_DATASOURCE_PASSWORD=your_password_here

# Oppure Direct Connection (solo per sviluppo locale)
# SPRING_DATASOURCE_URL=jdbc:postgresql://db.YOUR_PROJECT_ID.supabase.co:5432/postgres?sslmode=require
# SPRING_DATASOURCE_USERNAME=postgres
# SPRING_DATASOURCE_PASSWORD=your_password_here

# Hikari Pool Configuration (optional)
HIKARI_MAX_POOL_SIZE=3
HIKARI_MIN_IDLE=1

# Liquibase Configuration (optional)
LIQUIBASE_SCHEMA=bank_schema
HIBERNATE_DEFAULT_SCHEMA=bank_schema



