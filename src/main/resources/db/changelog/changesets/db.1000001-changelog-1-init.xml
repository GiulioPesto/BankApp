<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!-- Create Schema for Local Environment -->
    <changeSet id="0-local" author="giulio.pastore" context="local">
        <sql>
            CREATE SCHEMA IF NOT EXISTS bank_schema_local;
        </sql>
    </changeSet>

    <!-- Create Schema for Production Environment -->
    <changeSet id="0-prod" author="giulio.pastore" context="prod">
        <sql>
            CREATE SCHEMA IF NOT EXISTS bank_schema_prod;
        </sql>
    </changeSet>

    <!-- Fallback for default schema (backward compatibility) -->
    <changeSet id="0-default" author="giulio.pastore" context="!local and !prod">
        <sql>
            CREATE SCHEMA IF NOT EXISTS bank_schema;
        </sql>
    </changeSet>

    <!-- Create User Table -->
    <changeSet id="1" author="giulio.pastore">
        <createTable tableName="user" schemaName="${schema.name}">
            <column name="uid" type="char(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="second_name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="email" type="varchar(254)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="zip_code" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="tax_id_code" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="birth_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="birth_place" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="phone_number" type="varchar(20)">
                <constraints nullable="false" />
            </column>
            <column name="subscription_type" type="varchar(20)" />
            <column name="city" type="varchar(40)">
                <constraints nullable="false" />
            </column>
            <column name="province" type="varchar(50)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- Create Account Table -->
    <changeSet id="2" author="giulio.pastore">
        <createTable tableName="bank_account" schemaName="${schema.name}">
            <column name="uid" type="char(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="iban" type="varchar(34)"/>
            <column name="balance" type="decimal(19,2)"/>
            <column name="user_uid" type="char(36)">
                <constraints nullable="false" foreignKeyName="fk_bank_account_user"
                             referencedTableName="user"
                             referencedTableSchemaName="${schema.name}"
                             referencedColumnNames="uid"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create Transfer Table -->
    <changeSet id="3" author="giulio.pastore">
        <createTable tableName="transfer" schemaName="${schema.name}">
            <column name="uid" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="from_bank_account_uid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="to_bank_account_uid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="decimal(19,2)"/>
            <column name="fees" type="decimal(19,2)"/>
            <column name="timestamp" type="timestamp"/>
            <column name="description" type="varchar(255)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="transfer"
                                 baseTableSchemaName="${schema.name}"
                                 baseColumnNames="from_bank_account_uid"
                                 referencedTableName="bank_account"
                                 referencedTableSchemaName="${schema.name}"
                                 referencedColumnNames="uid"
                                 constraintName="fk_transfer_from_bank_account"/>
        <addForeignKeyConstraint baseTableName="transfer"
                                 baseTableSchemaName="${schema.name}"
                                 baseColumnNames="to_bank_account_uid"
                                 referencedTableName="bank_account"
                                 referencedTableSchemaName="${schema.name}"
                                 referencedColumnNames="uid"
                                 constraintName="fk_transfer_to_bank_account"/>
    </changeSet>

    <changeSet id="1759247832462-1" author="giulio_pastore">
        <addColumn tableName="user" schemaName="${schema.name}">
            <column name="auth_user_id" type="VARCHAR(36)" />
        </addColumn>
    </changeSet>

    <changeSet id="user_view" author="giulio.pastore">
        <createView viewName="user_full" schemaName="${schema.name}" replaceIfExists="true">
            SELECT
                u.*,
                a.phone,
                a.created_at
            FROM ${schema.name}.user u
                     JOIN auth.users a ON a.id = CAST(u.auth_user_id AS uuid)
        </createView>
    </changeSet>

</databaseChangeLog>
