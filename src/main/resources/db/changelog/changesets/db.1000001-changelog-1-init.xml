<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="0" author="giulio.pastore">
        <sql>
            CREATE SCHEMA IF NOT EXISTS bank_schema;
        </sql>
    </changeSet>

    <!-- Create User Table -->
    <changeSet id="1" author="giulio.pastore">
        <createTable tableName="user" schemaName="bank_schema">
            <column name="uid" type="char(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="second_name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="email" type="varchar(254)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="zip_code" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="tax_id_code" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="birth_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="birth_place" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="phone_number" type="varchar(20)">
                <constraints nullable="false" />
            </column>
            <column name="subscription_type" type="varchar(20)" />
            <column name="city" type="varchar(40)">
                <constraints nullable="false" />
            </column>
            <column name="province" type="varchar(50)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- Create Account Table -->
    <changeSet id="2" author="giulio.pastore">
        <createTable tableName="bank_account" schemaName="bank_schema">
            <column name="uid" type="char(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="iban" type="varchar(34)"/>
            <column name="balance" type="decimal(19,2)"/>
            <column name="user_uid" type="char(36)">
                <constraints nullable="false" foreignKeyName="fk_bank_account_user"
                             referencedTableName="user"
                             referencedTableSchemaName="bank_schema"
                             referencedColumnNames="uid"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create Transfer Table -->
    <changeSet id="3" author="giulio.pastore">
        <createTable tableName="transfer" schemaName="bank_schema">
            <column name="uid" type="char(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="from_bank_account_uid" type="char(36)">
                <constraints nullable="false"/>
            </column>
            <column name="to_bank_account_uid" type="char(36)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="decimal(19,2)"/>
            <column name="fees" type="decimal(19,2)"/>
            <column name="timestamp" type="timestamp"/>
            <column name="description" type="varchar(255)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="transfer"
                                 baseTableSchemaName="bank_schema"
                                 baseColumnNames="from_bank_account_uid"
                                 referencedTableName="bank_account"
                                 referencedTableSchemaName="bank_schema"
                                 referencedColumnNames="uid"
                                 constraintName="fk_transfer_from_bank_account"/>
        <addForeignKeyConstraint baseTableName="transfer"
                                 baseTableSchemaName="bank_schema"
                                 baseColumnNames="to_bank_account_uid"
                                 referencedTableName="bank_account"
                                 referencedTableSchemaName="bank_schema"
                                 referencedColumnNames="uid"
                                 constraintName="fk_transfer_to_bank_account"/>
    </changeSet>

    <changeSet id="user_view" author="giulio.pastore">
        <createView viewName="user_full" schemaName="bank_schema" replaceIfExists="true">
            SELECT
                u.*,
                a.phone,
                a.created_at
            FROM bank_schema.user u
                     JOIN auth.users a ON a.id = u.auth_user_id::uuid
        </createView>
    </changeSet>

    <changeSet id="1759247832462-1" author="giulio_pastore">
        <addColumn tableName="user" schemaName="bank_schema">
            <column name="auth_user_id" type="uuid" />
        </addColumn>
    </changeSet>

    <changeSet id="4" author="giulio.pastore">
        <addForeignKeyConstraint baseTableName="user"
                                 baseTableSchemaName="bank_schema"
                                 baseColumnNames="auth_user_id"
                                 referencedTableName="users"
                                 referencedTableSchemaName="auth"
                                 referencedColumnNames="id"
                                 constraintName="fk_user_auth_user"/>
    </changeSet>


    <changeSet id="1759764704849-1" author="giulio_pastore">
        <dropForeignKeyConstraint baseTableName="user" baseTableSchemaName="bank_schema"  constraintName="fk_user_auth_user"/>
    </changeSet>
</databaseChangeLog>
