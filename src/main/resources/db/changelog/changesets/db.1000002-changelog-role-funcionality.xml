<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="20250719212758" author="giulio.pastore">
        <createTable tableName="role" schemaName="${schema.name}">
            <column name="uid" type="char(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="description" type="varchar(100)"/>
        </createTable>
        <createTable tableName="functionality" schemaName="${schema.name}">
            <column name="uid" type="char(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="description" type="varchar(100)"/>
        </createTable>
    </changeSet>
    <changeSet id="20250719220000" author="giulio.pastore">
        <createTable tableName="user_role" schemaName="${schema.name}">
            <column name="user_uid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="role_uid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="user_role" schemaName="${schema.name}" columnNames="user_uid,role_uid" constraintName="pk_user_role"/>
        <addForeignKeyConstraint baseTableName="user_role"
                                 baseTableSchemaName="${schema.name}"
                                 baseColumnNames="user_uid"
                                 referencedTableName="user"
                                 referencedTableSchemaName="${schema.name}"
                                 referencedColumnNames="uid"
                                 constraintName="fk_userrole_user"/>
        <addForeignKeyConstraint baseTableName="user_role"
                                 baseTableSchemaName="${schema.name}"
                                 baseColumnNames="role_uid"
                                 referencedTableName="role"
                                 referencedTableSchemaName="${schema.name}"
                                 referencedColumnNames="uid"
                                 constraintName="fk_userrole_role"/>

        <createTable tableName="role_functionality" schemaName="${schema.name}">
            <column name="role_uid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="functionality_uid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="role_functionality" schemaName="${schema.name}" columnNames="role_uid,functionality_uid" constraintName="pk_role_functionality" />
        <addForeignKeyConstraint baseTableName="role_functionality"
                                 baseTableSchemaName="${schema.name}"
                                 baseColumnNames="role_uid"
                                 referencedTableName="role"
                                 referencedTableSchemaName="${schema.name}"
                                 referencedColumnNames="uid"
                                 constraintName="fk_rolefunc_role"/>
        <addForeignKeyConstraint baseTableName="role_functionality"
                                 baseTableSchemaName="${schema.name}"
                                 baseColumnNames="functionality_uid"
                                 referencedTableName="functionality"
                                 referencedTableSchemaName="${schema.name}"
                                 referencedColumnNames="uid"
                                 constraintName="fk_rolefunc_func"/>
    </changeSet>
</databaseChangeLog>
